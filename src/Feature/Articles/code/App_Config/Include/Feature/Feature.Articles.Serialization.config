<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentManagement">
    <unicorn>
      <configurations>
        <configuration name="Feature.Articles" description="Feature Articles" extends="Helix.Feature">
          <predicate>
            <include name="GlobalData" database="master" path="/sitecore/content/Global Data" />
            <include name="ArticleView" database="master" path="/sitecore/system/Settings/Buckets/Views/Article View" />
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>